---

import { categories } from "@lib/strapi";
---

<div class="container mx-auto px-4 ">
<div class="flex lg:pt-5 pt-4">
    <ul class="my-4 flex gap-4">
        <li class="">
          <a href="/blog/" class="text-[#100d06] py-3 px-5 font-semibold border rounded-2xl hover:border-[#5e52e8] hover:border hover:text-[#5e52e8]">All Categories</a>
        </li>

      {
        categories.map((category) => (
            <li class="">
              <a href={`/blog/${category.slug}/`} class="text-[#100d06] py-3 px-5 font-semibold border rounded-2xl hover:border-[#5e52e8] hover:border hover:text-[#5e52e8]">
                  {category.name}
              </a>
            </li>
        ))
      }
    </ul>
  </div>
</div> 