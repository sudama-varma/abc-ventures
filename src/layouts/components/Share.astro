---
import config from "@config/config.json";
import { IoLogoFacebook } from "react-icons/io5/index.js";
import { FaLinkedin, FaReddit, FaTwitter, FaXTwitter } from "react-icons/fa6/index.js";

const { base_url } = config.site;
const {
  title,
  slug,
  className,
  isNative,
}: {
  title: string;
  slug: string;
  className: any;
  isNative: boolean;
} = Astro.props as {
  title: string;
  slug: string;
  className: any;
  isNative: boolean;
};
---

<div class=" gap-4 ">
  <ul class={`${className} bg-[#f0efff] p-4`}>
    <li class="block bg-[#1ca1f3] ">
      <a
        aria-label="twitter share button"
        href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${base_url}/${slug}`}
        target="_blank"
        rel="noreferrer noopener"
        class="text-xl text-white hover:text-white"
      >
        <FaTwitter />
      </a>
    </li>
    <li class="block bg-[#3b5999]">
      <a
        aria-label="facebook share button"
        href={`https://facebook.com/sharer/sharer.php?u=${base_url}/post/${slug}`}
        target="_blank"
        rel="noreferrer noopener"
        class="text-xl text-white hover:text-white"
      >
        <IoLogoFacebook />
      </a>
    </li>
    <li class="block bg-[#0077b5]">
      <a
        aria-label="facebook share button"
        href={`https://www.linkedin.com/shareArticle?mini=true&url=${base_url}/post/${slug}&title=${title}`}
        target="_blank"
        rel="noreferrer noopener"
        class="text-xl text-white hover:text-white"
      >
        <FaLinkedin />
      </a>
    </li>

    <li class="block bg-[#ff4500]">
      <a
        aria-label="facebook share button"
        href={`https://www.reddit.com/submit?url=${base_url}/post/${slug}`}
        target="_blank"
        rel="noreferrer noopener"
        class="text-xl text-white hover:text-white"
      >
        <FaReddit />
      </a>
    </li>
  </ul>
</div>
