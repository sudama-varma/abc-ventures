---
import { nativeBlogs } from "@lib/strapi";
const readNextBlogs = nativeBlogs.slice(0, 6);
---

<section class="bg-[#f3f4f6] py-12">
  <div class="mt-4">
    <h2 class="text-[#111827] lg:text-3xl md:text-2xl sm:px-3 px-5 ml-[52px]">
      Read Next
    </h2>
    <div class="container mx-auto px-4 items-center">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:px-3 px-4"
      >
        {
          readNextBlogs?.map((blog) => (
            <div class="overflow-hidden p-3">
              <img
                src={blog?.imageSmallUrl || "/images/placeholder.png"}
                alt="Wearable Tech"
                class="w-full object-cover rounded-[0.5rem] mb-3"
              />
              <div class="py-2">
                <h2
                  set:html={blog?.title}
                  class="text-2xl font-semibold  my-1 text-[#111928]"
                ></h2>
                <a
                  href={`/${blog?.slug}/`}
                  class="text-blue-600 text-base font-medium inline-flex items-center hover:text-[#443ab9]"
                >
                  Read more{" "}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="ml-2 w-4"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
                    />
                  </svg>
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
