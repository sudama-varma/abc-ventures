---
import Base from "@layouts/Base.astro";
---

<Base title={"Error 404"}>
  <section class="section pt-0">
    <div class="container">
      <div class="flex items-center justify-center">
        <div class="text-center  mx-auto">
          <h1 class="lg:text-[9rem] text-[7rem]">404</h1>
          <h2>Something’s missing.</h2>

          <p>
            Sorry, we can’t find that page. You’ll find lots to explore on the
            home page.
          </p>

          <a href="/">
            <button
              class="py-3 px-5 bg-[#4f44d1] text-[#f9f9f9] font-medium rounded-[1rem] hover:bg-[#776bff] hover:text-[#f9f9f9] transition-colors"
            >
              Back to Homepage
            </button>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>
