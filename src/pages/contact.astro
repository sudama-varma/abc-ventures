---
import Base from "@layouts/Base.astro";
import ContactForm from "@layouts/components/ContactForm";
import SubscribeNewsletter from "@layouts/components/SubscribeNewsletter.astro";
---

<Base showFooter={false}>
  <section class="contact-us-page lg:pt-24 md:pb-80">
    <div class="w-full flex justify-center my-5">
      <div class="max-w-[640px] w-full">
        <h1 class="text-white text-center text-2xl md:text-6xl font-semibold mb-4">Connect with ABC Ventures</h1>
        <p class="text-[#f9edff] text-center">
          We’re here to answer your questions and explore partnership
          opportunities. Whether you’re an aspiring entrepreneur, a potential
          investor, or just curious about the venture capital world, our team is
          ready to engage.
        </p>
      </div>
    </div>
    <!-- <div class="h-[300px]">
    </div> -->
  </section>
  <section class="w-full flex justify-center">
    <div class="w-3/5 mb-5">
      <ContactForm client:load />
    </div>
  </section>
  <section class="my-5 pt-[120px]">
    <div class="container max-auto px-4 w-full flex flex-wrap">
      <div class="w-1/3 text-center p-4">
        <p class="font-medium text-[20px] text-[#100D06] underline">Email us:</p>
        <p>
          Email us for general queries, including marketing and partnership
          opportunities.
        </p>
        <p class="mt-3 text-[#100D06] text-[14px] font-semibold underline">info@abcventures.com</p>
      </div>
      <div class="w-1/3 text-center p-4">
        <p class="font-medium text-[20px] text-[#100D06] underline">Visit us:</p>
        <p>Visit us:</p>
      </div>
      <div class="w-1/3 text-center p-4">
        <p class="font-medium text-[20px] text-[#100D06] underline">Phone call</p>
        <p>Connect directly with us via.</p>
        <p class="mt-3 text-[#1E429F] text-[14px] font-medium underline">+1 (646) 786-5060</p>
      </div>
    </div>
  </section>
  <SubscribeNewsletter />
</Base>
