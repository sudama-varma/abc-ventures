---
import Base from "@layouts/Base.astro";
import ContactForm from "@layouts/components/ContactForm";
import SubscribeNewsletter from "@layouts/components/SubscribeNewsletter.astro";
---

<Base showFooter={false}>
  <section class="contact-us-page  relative h-[600px] lg:h-[648px] lg:pt-24 pt-8 px-6 md:pb-80 before:hidden sm:before:block before:z-0 after:z-0 before:absolute before:left-8 before:bottom-0 before:w-[275px] before:h-[180px] before:bg-contain before:bg-right-bottom before:bg-no-repeat before:content-[''] before:bg-[url('/images/Contachero1.svg')]  after:absolute after:right-0 after:bottom-0 after:w-[290px] after:h-[245px] after:bg-contain after:bg-right-bottom after:bg-no-repeat after:content-[''] after:bg-[url('/images/ContactHero2.svg')] after:hidden sm:after:block">
    <div class="w-full flex justify-center my-0 md:my-5 ">
      <div class="max-w-[640px] w-full">
        <h1 class="text-white text-center text-5xl md:text-6xl font-semibold mb-4 !leading-[4.5rem]">Connect with ABC Ventures</h1>

        <p class="text-[#f9edff] text-center">
          We’re here to answer your questions and explore partnership
          opportunities. Whether you’re an aspiring entrepreneur, a potential
          investor, or just curious about the venture capital world, our team is
          ready to engage.
        </p>
      </div>
    </div>
    <!-- <div class="h-[300px]">
    </div> -->
  </section>
  <section class="w-full flex justify-center bg-[#f9f9f9]">
    <div class="md:w-3/5 mb-5 w-11/12">
      <ContactForm client:load />
    </div>
  </section>
  <section class="pt-[100px] md:pt-[120px] bg-[#f9f9f9] pb-8">
    <div class="container max-auto px-4 w-full flex flex-wrap gap-10 md:gap-0">
      <div class="md:w-1/3 w-full text-center p-4">
        <div class="circle flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-[#fafaff]">
          <img src="/images/contactIcon1.svg" alt="contactIcon1"/>
        </div>
        <p class="font-medium text-[20px] text-[#100D06] underline">Email us:</p>
        <p>
          Email us for general queries, including marketing and partnership
          opportunities.
        </p>
        <p class="mt-3 text-[#100D06] text-[14px] font-semibold underline"><a href="mailto:info@abcventures.com">info@abcventures.com</a></p>
      </div>
      <div class="md:w-1/3 w-full text-center p-4">
        <div class="circle flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-[#fafaff]">
          <img src="/images/ContactIcon2.svg" alt="contactIcon2"/>
        </div>
        <p class="font-medium text-[20px] text-[#100D06] underline">Visit us:</p>
        <p>Visit us:</p>
      </div>
      <div class="md:w-1/3 w-full text-center p-4">
        <div class="circle flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-[#fafaff]">
          <img src="/images/ContactIcon3.svg" alt="contactIcon3"/>
        </div>
        <p class="font-medium text-[20px] text-[#100D06] underline">Phone call</p>
        <p>Connect directly with us via.</p>
        <p class="mt-3 text-[#1E429F] text-[14px] font-medium"><a href="tel:+16467865060" class="no-underline">+1 (646) 786-5060</a></p>
      </div>
    </div>
  </section>
  <SubscribeNewsletter />
</Base>
